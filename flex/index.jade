doctype html
//- basic libraries: jquery(1.10.2), d3js(3.3.11), angularjs(1.2.3), bootstrap(3.0)/semantic-ui(0.9.3/0.9.5)
- var usecdn = false
- var useog = true
- var lib = { jquery: true, d3js: true, angular: true, bootstrap: true, semantic: false }
- var assets = "assets"
- var thumbnail = "http://zbryikt.github.io/visualize/flex/thumbnail.png"
html(lang="en")
  head(prefix="og: http://ogp.me/ns#")
    meta(charset="utf-8")
    title Cheatsheet: CSS Flexbox
    // libraries
    include library.jade
    // custom files
    link(rel="stylesheet",type="text/css",href="index.css")
    script(type="text/javascript",src="ui-choices.js")
    script(type="text/javascript",src="index.js")
    script(type="text/javascript",src="clipboard.min.js")
  body(ng-app="main",ng-controller="main")
    #root
      h2 Flexbox Cheatsheet
      p Flex is a powerful tool of controlling content flow, yet it's a little complicated. All we need is a tiny, live example of effects of each flex related attributes. So here it is, enjoy!
      hr
      form#ctrlpanel.form-inline
        .form-group
          label Node Type
          br
          choices(ng-model="nodetype",data-type="array",btn-type="btn-sm btn btn-default")
            choice(value="inline",fallback,active) Inline
            choice(value="block") Block
        .form-group
          label width & height
          br
          toggle.btn.btn-default.btn-sm(ng-model="randomHeight",ng-disabled="nodetype=='inline'",active) Random Height
          toggle.btn.btn-default.btn-sm(ng-model="randomWidth",ng-disabled="nodetype=='inline'",active) Random Width
          toggle.btn.btn-default.btn-sm(ng-model="invisibleItem",active) Add a Invisible Last Item
        .form-group
          label main direction
          br
          choices(ng-model="direction",data-type="array",btn-type="btn-sm btn btn-default")
            choice(value="row",fallback,active) Row
            choice(value="column") Column
          toggle.btn.btn-default.btn-sm(ng-model="directionReverse") Reversed
        .form-group
          label main align
          br
          choices(ng-model="justify",data-type="array",btn-type="btn-sm btn btn-default")
            choice(value="flex-start",active,fallback) Start
            choice(value="flex-end") End
            choice(value="center") Center
            choice(value="space-between") Space Between
            choice(value="space-around") Space Around
        .form-group
          label cross align
          br
          choices(ng-model="align",data-type="array",btn-type="btn-sm btn btn-default")
            choice(value="auto") Auto
            choice(value="flex-start",active,fallback) Start
            choice(value="flex-end") End
            choice(value="center") Center
            choice(value="baseline") Baseline
            choice(value="stretch") Stretch
        .form-group
          label multi-align
          br
          choices(ng-model="multialign",data-type="array",btn-type="btn btn-sm btn-default")
            choice(value="flex-start",active,fallback) Start
            choice(value="flex-end") End
            choice(value="center") Center
            choice(value="space-between") Space Between
            choice(value="space-around") Space Around
            choice(value="stretch") Stretch
        .form-group
          label grow
          br
          choices(ng-model="grow",data-type="array",btn-type="btn btn-sm btn-default")
            choice(value="0",active,fallback) 0
            choice(value="1") 1
        .form-group
          label shrink
          br
          choices(ng-model="shrink",data-type="array",btn-type="btn btn-sm btn-default")
            choice(value="0",active,fallback) 0
            choice(value="1") 1
        .form-group
          label basis
          br
          choices(ng-model="basis",data-type="array",btn-type="btn btn-sm btn-default")
            choice(value="0") 0
            choice(value="30px") 30px
            choice(value="500px") 500px
            choice(value="auto",active,fallback) auto
      hr
      .row
        .col-sm-8
          label Preview
          #container(style="flex-direction:{{flexdirection}};justify-content:{{justify[0]}};align-items:{{align[0]}};align-content:{{multialign[0]}}",ng-class="{'with-phantom':invisibleItem}")
            .item(ng-repeat="n in nodes",ng-attr-style="flex: {{grow[0]}} {{shrink[0]}} {{basis[0]}}")
              span(ng-if="nodetype[0]=='inline'") test
              .ib(ng-if="nodetype[0]=='block'",ng-attr-style="width:{{n.w}}px;height:{{n.h}}px")
            //-.item.phantom(ng-show="invisibleItem",style="flex: 999 999 auto")
              span invisible phantom node
        .col-sm-4
          label CSS
          textarea#output.form-control(rows="13",ng-model="output",data-clipboard-target="#output")
      #footer
        .pull-right
          span by &nbsp;
          a(href="https://twitter.com/zbryikt") @zbryikt
          span &nbsp; / &nbsp;
          a(href="https://github.com/zbryikt/visualize/tree/gh-pages/flex") Github
